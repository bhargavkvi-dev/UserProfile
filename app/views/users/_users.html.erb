<table class="table table-hover">

	<thead>
		<tr>
		    <th><%= sort_link "First Name" %></th>
			<th><%= sort_link "Last Name" %></th>
			<th>Gender</th>
			<th><%= sort_link "Company" %></th>
			<th>City</th>
			<th>Email</th>
			<th>Mobile Number</th>
			<th>Interested Technology</th>
			<th><%= sort_link "Job Status" %></th>
			<th>Description</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		   <tr>
		   	  <td><%= user.first_name %></td>
		   	  <td><%= user.last_name %></td>
		   	  <td><%= user.gender %></td>
		   	  <td><%= user.company %></td>
		   	  <td><%= user.city %></td>
		   	  <td><%= user.email %></td>
		   	  <td><%= user.mobile_number %></td>
		   	  <td><%= user.technology %></td>
		   	  <td><%= user.job_status %></td>
		   	  <td><%= user.description %></td>
		   	  <td><%= link_to edit_user_path(user.id) do%><span class = "glyphicon glyphicon-pencil"></span><% end %> | <%= link_to user_path(user.id), method: :delete, data: {confirm: "Are you Sure ?"}  do %><span class = "glyphicon glyphicon-trash"></span><% end %></td>
		   </tr>
		<% end %>
	
	</tbody>
</table>

<%= will_paginate @users %>

<%= link_to "Add User", new_user_path %>